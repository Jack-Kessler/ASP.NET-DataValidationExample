@using ASP.NET_Core_Identity_Demo.Models.Weather
@model Root

<div class="container vh-100 mt-3">
    <h1 class="display-2 text-white text-center">OpenWeatherMap API Demo</h1>
    <div class="col-6 p-2 mt-5">
        
        <form asp-action="GetWeather" asp-controller="OpenWeatherMap" method="post">
            <h2 class="display-5">5 Day Forecast</h2>
            <div class="col-8">
                <div asp-validation-summary="All" class="text-danger"></div>
                <label asp-for="City.Name">Name of City</label>
                <input asp-for="City.Name" class="form-control" />
            </div>
            <div class="col-8">
                <label asp-for="API_Key">API Key</label>
                <input asp-for="API_Key" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <div class="col-8">
                    <button type="submit" class="btn btn-success form-control">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

